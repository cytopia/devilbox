      <a href="{{ url('/table/structure', {'db': db, 'table': table}) }}" id="table_structure_id" class="nav-link{{ route == '/table/structure' ? ' active' }}">
        {{ get_icon('b_props', 'Table structure'|trans, true) }}
      </a>
    </li>

