    },
    "require": {
        "php": ">=5.3.3",
        "symfony/polyfill-ctype": "^1.8"
    },
    "require-dev": {
        "symfony/phpunit-bridge": "^3.3",
        "symfony/debug": "^2.7",
        "psr/container": "^1.0"
